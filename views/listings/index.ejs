<% layout("/layouts/boilerplate") %>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">All Listings</h1>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% for(let listing of allListings) { %>
            <div class="col">
                <div class="card1 h-100">
                    <a href="/listings/<%= listing._id %>">
                        <img src="<%= listing.image %>" class="card-img-top" alt="listing-img">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text"><strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
                        <p class="card-text"><strong>Location:</strong> <%= listing.location %></p>   
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</body>
