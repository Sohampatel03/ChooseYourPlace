<% layout("/layouts/boilerplate") %>

<body>
<div class="containerSignUp">
        <h1 class="text-center mb-4">Login to My Page</h1>
        <form action="/login" method="POST" novalidate class="bg-light p-4 rounded shadow needs-validation">
            <div class="mb-3">  
                <input id="username" name="username" type="text" class="form-control" placeholder="Enter UserName" required/>
            </div>
            <div class="mb-3">  
                <input id="password" name="password" type="password" class="form-control" placeholder="Enter password" required/>
            </div>
            <div class="mb-3">  
                <button>Login</button>
            </div>
            </form>    
         </div>
</body>